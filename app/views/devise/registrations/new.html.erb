<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "sign_up_form"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: "Full Name", required: true %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", required: true  %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password", required: true  %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", required: true  %>
  </div>

  <div class="field">
    <%= f.text_field :phone_number, placeholder: "Phone Number", required: true  %>
  </div>

  <div class="field">
    <%= f.label "Date of birth" %>
    <%= f.date_select :date_of_birth, start_year: 1940 %>
  </div>

  <div class="field">
    <%= f.radio_button :gender, "Male", required: true %>
    <%= f.label :gender, value: "Male" %>
    <%= f.radio_button :gender, "Female" %>
    <%= f.label :gender, "Female" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-info btn-sm" %>
  </div>
  
  <div>
    Don't have an account? <%= link_to "Sing in", new_user_session_path %>
  </div>
<% end %>