<h1>Edit <%= resource_name.to_s.humanize %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "sign_up_form", method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.text_field :name, placeholder: "Name" %>
  </div>

  <div class="field">
   <%= f.password_field :password, placeholder: "Enter new password" %><br />
   <i>(leave blank if you don't want to change it)</i>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "Confirm new password" %>
  </div>

  <div class="field">
    <%= f.password_field :current_password, placeholder: "Current Password" %></br>
    <i>(we need your current password to confirm your changes)</i>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>

  <%= link_to "Back", :back %>
<% end %>
