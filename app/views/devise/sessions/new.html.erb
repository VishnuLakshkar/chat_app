<h1>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "sign_in_form"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.email_field :email, placeholder: "Email", required: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password", required: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary btn-sm" %>
  </div>

  <div>
    not a user? <%= link_to "Sing up", new_user_registration_path %>
  </div>
<% end %>